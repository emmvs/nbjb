  <%# </button> %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="font-gamma<%= active?(dashboards_dashboard_path)%>">
        <%= link_to "HOME", dashboards_dashboard_path, class: "btn-navbar"  %>
        </li>
        <li class="font-gamma<%= active?(profiles_path)%>">
         <%= link_to "BITCHES", profiles_path, class: "btn-navbar"  %>
