<%#app/views/nights/index.html.erb%>
<h1 class="font-beta">Nights</h1>

<%# ************** Display Places of Nights ************** %>
  <div class="container">
      <% @nights.each do |night| %>
      <div>
        <div class="list-name font-gamma"><%= night.place.name %></div>
        <div class="item-btn font-gamma"><%= link_to 'Show Night', night_path(night) %></div>
      </div>
      <% end %>
  </div>
    <div class="item-btn"><%= link_to 'Add new night', new_night_path(@night) %></div>
