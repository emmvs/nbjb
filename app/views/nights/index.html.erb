<%#app/views/nights/index.html.erb%>
<h1 class="font-beta">Nights</h1>

<%# ************** Display Nights ************** %>
  <div class="container">
      <% @nights.each do |night| %>
      <div>
        <div class="list-name font-gamma"><%= night.title %></div>
        <%# Choose different nights %>
        <div class="item-btn font-gamma"><%= link_to 'Show Night', night_path(night) %></div>
        <%# Create different nights %>
        <%# Who can create different nights? The members? Strangers?%>
        <div class="item-btn font-gamma"><%= link_to 'Add new night', new_night_path(@night) %></div>
      </div>
      <% end %>
  </div>
